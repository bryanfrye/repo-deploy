#!/bin/bash
if [[ "$(basename "$PWD")" == "repo-deploy" ]]; then
  echo "ğŸ›‘ Skipping linters in repo-deploy"
  exit 0
fi

echo "ğŸ” Running pre-commit linters..."

if [ -f "./scripts/run_linters.sh" ]; then
  ./scripts/run_linters.sh
  STATUS=$?
  if [ $STATUS -ne 0 ]; then
    echo "âŒ Linters failed. Commit aborted."
    exit $STATUS
  fi
else
  echo "âš ï¸ No run_linters.sh found. Skipping linters."
fi
